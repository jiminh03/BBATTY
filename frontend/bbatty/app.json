{
  "expo": {
    "name": "main",
    "slug": "bbatty",
    "version": "1.0.0",
    "scheme": "bbatty",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "AIzaSyA9pv5VDiiDgUgEssoorchl1Ga_6y3E_Sw"
      }
    },
    "android": {
      "package": "com.forbidden.bbatty",
      "permissions": [
        "ACCESS_NETWORK_STATE",
        "INTERNET",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyA9pv5VDiiDgUgEssoorchl1Ga_6y3E_Sw"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "이 앱은 직관 인증을 위해 위치 정보를 사용합니다."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "이 앱은 프로필 사진 업로드를 위해 갤러리에 접근합니다."
        }
      ],
      [
        "@react-native-kakao/core",
        {
          "nativeAppKey": "f3cdad34b10d9d1bcb6b42cde54d015d"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "extraMavenRepos": ["https://devrepo.kakao.com/nexus/content/groups/public/"]
          }
        }
      ],
      "expo-maps"
    ]
  }
}
